
  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <% end %>
 <h1>Books</h1>
 <table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |books| %>
  <tr>
    <td><%= books.title %></td>
    <td><%= books.body %></td>
    <td><%= link_to "Show", "/books/#{books.id}" %></td>
    <td><%= link_to "Edit", "/books/#{books.id}/edit" %></td>
    <td>
    <%= link_to "destroy", "/books/#{books.id}" ,method: :delete, data: { confirm: "Are you sure?"} %>
    </td>
   </tr>
  <% end %>
 </table>

 <h2>New book</h2>
   <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
    </div>
  <% end %>

    <%= form_with model:@book, local:true do |f| %>
     <div class="field">
    <p class="field-item">Title</p>
    <%= f.text_field :title %>
   </div>
   <div class="field">
    <p class="field-item">Body</p>
    <%= f.text_area :body %>
   </div>
   <div class="actions">
    <%= f.submit 'Create Book' %>
   </div>
   <% end %>
